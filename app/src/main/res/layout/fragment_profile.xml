<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:layout_margin="10dp"
        android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_profile_black_24dp" />

            <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="익명" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_userEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:text="userEmail"
            android:textSize="14sp"
            android:textStyle="bold"
            android:minHeight="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearSeparation1"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#EAEAEA"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/tv_myReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:text="내 리뷰 관리"
        android:textSize="14sp"
        android:textStyle="bold"
        android:minHeight="30dp" />

    <LinearLayout
        android:id="@+id/linearSeparation2"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:orientation="horizontal"
        android:background="#EAEAEA"/>

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:text="로그아웃"
        android:textSize="14sp"
        android:textStyle="bold"
        android:minHeight="30dp" />

    <LinearLayout
        android:id="@+id/linearSeparation3"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:orientation="horizontal"
        android:background="#EAEAEA"/>

    <TextView
        android:id="@+id/tv_withdrawal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:text="회원탈퇴"
        android:textSize="14sp"
        android:textStyle="bold"
        android:minHeight="30dp" />

    <LinearLayout
        android:id="@+id/linearSeparation4"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:orientation="horizontal"
        android:background="#EAEAEA"/>


    <TextView
        android:id="@+id/tv_moRoomVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:text="moRoom V1.0.0"
        android:textSize="12sp"
        android:textStyle="bold"
        android:minHeight="30dp" />

    <Button
        android:id="@+id/moveToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:text="로그인 하러 가기"
        android:background="@drawable/button_style_1"
        android:visibility="gone"/>

</LinearLayout>